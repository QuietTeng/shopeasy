{
    "name": "shopeasy/shopeasy",
    "type": "project",
    "description": "Laravel ShopEasy - 微信网店 CRM 解决方案",
    "keywords": ["laravel", "shopeasy", "ecommerce", "framework", "opensource"],
    "homepage": "https://club.shopes.cn",
    "license": "GPL-3.0+",
    "require": {
        "php": ">=7.0",
        "shopeasy/modules": "~1.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.4",
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "league/commonmark": "^0.15.4",
        "league/flysystem-aws-s3-v3": "^1.0",
        "mockery/mockery": "0.9.*",
        "orchestra/testbench": "^3.5",
        "phpunit/phpunit": "~6.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },
    "config": {
        "vendor-dir": "./storage/vendor/",
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('docs/.env.example', '.env');\"",
            "@php -r \"file_exists('storage/app/packages/modules/composer.json') || copy('storage/app/packages/modules/composer-stable.json', 'storage/app/packages/modules/composer.json');\""
        ],
        "post-autoload-dump": [
            "@php artisan package:discover"
        ],
        "post-create-project-cmd": []
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "app/*/composer.json",
                "public/plugins/*/composer.json",
                "public/themes/*/composer.json",
                "public/addons/*/*/composer.json"
            ],
            "require": [
            ],
            "recurse": true,
            "replace": false,
            "merge-dev": true,
            "merge-extra": true,
            "merge-scripts": true,
            "merge-extra-deep": true
        },
        "installer-types": ["wordpress-core", "shopeasy-module", "project"],
        "installer-paths": {
            "app/framework/laravel": ["laravel/laravel"],
            "public/app/": ["type:wordpress-core"],
            "app/{$name}/": ["type:shopeasy-module"]
        },
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "local": {
            "type": "path",
            "url": "storage/app/packages/*"
        },
        "shopes": {
            "type": "composer",
            "url": "https://packagist.shopes.cn"
        },
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
